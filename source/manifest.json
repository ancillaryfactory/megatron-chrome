{
  "name": "Megatron",
  "manifest_version": 2,
  "version": "3.2",
  "description": "Opens a new tab and adds tfrm=4 to the current URL",
  "update_url": "http://viewsauce.org/megatron/updates.xml",
  "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js",
            "jquery-2.0.0.min.js"
        ]
    },
    "icons": { 
       "16": "igx.ico",
       "48": "icon-48.png",
      "128": "icon-128.png" 
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/",
        "https://*/"
    ]
}